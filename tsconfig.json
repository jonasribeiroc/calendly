{
    "compilerOptions": {
      "target": "ES5",
      "module": "ESNext",
      "jsx": "react",
      "strict": true,
      "moduleResolution": "node",
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "resolveJsonModule": true,
      "types": ["jest", "node"]
    },
    "include": ["src/**/*", "jest.config.ts", "jest.setup.ts", "src/**/*.ts", "src/**/*.tsx"],
    "exclude": ["node_modules"]
  }
